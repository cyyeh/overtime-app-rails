- if flash[:alert]
  = js add_gritter(flash[:alert], title: "Overtime App Alert", sticky: false, time: 1500, image: :warning)
- elsif flash[:notice]
  = js add_gritter(flash[:notice], title: "Overtime App Notification", sticky: false, time: 1500, image: :notice)
- else
  = js add_gritter(flash[:error], title: "Overtime App Error", sticky: false, time: 1500, image: :error)